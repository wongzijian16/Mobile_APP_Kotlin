<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="news"
            type="com.example.naturemagnet.entity.News" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rectangle_news"
        style="@style/card_rectangle_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="@dimen/border_radius_10"
        app:cardElevation="2dp">


        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#8A8A8A">

            <TextView
                android:id="@+id/indexNumNews"
                android:layout_width="78dp"
                android:layout_height="94dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_corner"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="278dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            app:cardBackgroundColor="#FFFFFF">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="Climate change: Arctic warming linked to colder winters"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:text="The BBC - 2022-10-01"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/primaryColor" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            app:cardBackgroundColor="#FFFFFF">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingTop="5dp"
                android:layout_gravity="right"
                app:srcCompat="@drawable/ic_baseline_star_border_24" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"/>


        </androidx.cardview.widget.CardView>

    </com.google.android.material.card.MaterialCardView>
</layout>